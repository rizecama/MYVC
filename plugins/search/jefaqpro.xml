<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">

	<name>Search - jefaqpro</name>
	<creationDate>October 2010</creationDate>
	<author>J-Extension</author>
	<authorEmail>contact@jextn.com</authorEmail>
	<authorUrl>www.jextn.com</authorUrl>
	<copyright>2010 - 2011 JExtn</copyright>
	<license>GNU General Public License v2, see LICENSE.php</license>
	<version>1.0</version>
	<description>Its supports default joomla search module. So users can search their own way.</description>

	<files>
	   <filename plugin="jefaqpro">jefaqpro.php</filename>
	</files>

	<languages>
	   <language tag="en-GB">en-GB.plg_search_jefaqpro.ini</language>
	</languages>

	<params>
	   <param name="searchlimit" type="text" default="50" label="PARAMLIMIT" description="JE_NOITEMS"/>
	   <param name="searchcategory" type="radio" default="0" label="PARAMCATEGORY" description="JE_SEARCHCATEGORY">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>

</install>
