<?xml version="1.0" encoding="iso-8859-1"?>
<install type="module" version="1.5.0">
    <name>Vt NewsTicker</name>
    <creationDate>August 2010</creationDate>
    <author>YouTech</author>
    <copyright>Copyright (C) 2009 - 2010 YouTech Company</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html</license>
    <authorEmail>contact@ytcvn.com</authorEmail>
    <authorUrl>http://www.smartaddons.com</authorUrl>
    <version>1.1</version>
    <description>VT_NEWSTICKER_DESC</description>
    <files>
         <filename module="mod_vt_newsticker">mod_vt_newsticker.php</filename>
         <filename module="mod_vt_newsticker">mod_vt_newsticker.xml</filename>
         <filename module="mod_vt_newsticker">helper.php</filename>         
         <folder module="mod_vt_newsticker">assets</folder>
         <folder module="mod_vt_newsticker">tmpl</folder>
         <folder module="mod_vt_newsticker">elements</folder>
    </files>   
	<languages>
		<language tag="en-GB">en-GB.mod_vt_newsticker.ini</language>
	</languages>
   <params addpath="/modules/mod_vt_newsticker/elements">
        <param name="selectradio" type="radio" default="0" label="Select option" description="Select option">
		  <option value="0">Section</option>
		  <option value="1">Category</option>
		</param>
   		<param name="Show Group" type="vthemes" default="1" label="Show Group" description="Show Group" />
   		<param name="frontpage" type="list" default="2" label="Show article frontpage" description="Show article frontpage">
			<option value="1">Only frontpage article</option>
			<option value="2">Both</option>
			<option value="3">Without frontpage article</option>
		</param>
		
   		<param name="sort_order_field" type="list" default="created" label="Sort by field" description="SORT ORDER BY FIELD">
			<option value="created">Date</option>
			<option value="ordering">Ordering</option>
			<option value="hits">Hits</option>
		</param>
		
		<param name="sort_order" type="list" default="ASC" label="Sort order by" description="SORT ORDER BY ASC|DESC">
			<option value="ASC">Asc</option>
			<option value="DESC">Desc</option>
		</param>
		
		<param name="play" type="list" default="1" label="Play" description="Play description">
			<option value="1">Auto</option>
			<option value="0">Stop</option>
		</param>
						
		
		<param name="width" type="text" default="0" label="Module width (px)" description="Module width. 0 = 100%" />
		<param name="height" type="text" default="300" label="Module height (px)" description="Module height" />
		
		<param name="thumb_width" type="text" default="50" label="Thumb width" description="THUMB WIDTH" />
		<param name="thumb_height" type="text" default="50" label="Thumb height" description="THUMB HEIGHT" />
		
		<param name="cropresizeimage" type="list" default="1" label="Crop or resize image" description="CROP OR RESIZE IMAGE">
			<option value="0">Resize</option>
			<option value="1">Crop</option>
		</param>				
				
				
		<param name="totalarticles" type="text" default="6" label="Total articles" description="Total article" />
		<param name="limitcharacter" type="text" default="200" label="Max length of description" description="MAX LENGTH OF DESCRIPTION" />
		
		<param name="limittitle" type="text" default="25" label="Max length of title" description="Max length of title" />
		
		<param name="show_image" type="list" default="1" label="Show Image" description="Show Image">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="show_description" type="list" default="1" label="Show Description" description="Show Description">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="showreadmore" type="list" default="1" label="Show read more" description="SHOW READ MORE">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>		
   </params>
   
   <params group="advanced">
		<param name="cache" type="list" default="0" label="Caching" description="Caching">
			<option value="1">USE CACHE</option>
			<option value="0">DON'T CACHE</option>
		</param>
		<param name="cache_time" type="text" default="300" label="Cache time" description="Cache time" />
		 <param name="jquery" type="radio" default="1" label="Include Jquery" description="Include Jquery">
			<option value="0">NO</option>
			<option value="1">YES</option>
        </param>
		<param name="note" type="textarea" cols="50" rows="10" default="" label="Note" description=""/>
	</params>
</install>

