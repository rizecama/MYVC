		<language tag="en-GB">en-GB.com_jefaqpro.ini</language>
	</languages>

	<administration>
		<!-- Administration Menu Section -->
		<menu img="components/com_jefaqpro/assets/images/small_icon_faq.png" link="option=com_jefaqpro">JE FAQ Pro</menu>
		<submenu>
			<menu img="components/com_jefaqpro/assets/images/category_image.png"  controller="category">Categories</menu>
